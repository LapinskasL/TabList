{
    "manifest_version": 2,
    "name": "TabList",
    "version": "1.0",
    "description": "Create lists of tabs and launch them in a new window.",
    "permissions": [ 
        "storage" 
    ],
    "browser_action": {
        "default_icon": "images/extensionIcons/extensionIcon128.png",
        "default_popup": "popup/popup.html",
        "default_title": "TabList"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
      },
    "background": {
        "scripts": ["background.js"]
    },
    "icons": { 
       "128": "images/extensionIcons/extensionIcon128.png" 
    }
}
